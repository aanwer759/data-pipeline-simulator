$ echo "194f1e1e4bd02f80b7e9633fc546084d8d4e19f3928a324d512ea53430102e1d  actions-runner-linux-x64-2.329.0.tar.gz" | shasum -a 256 -cCopied!# Extract the installer
$ tar xzf ./actions-runner-linux-x64-2.329.0.tar.gz
Configure
# Create the runner and start the configuration experience
$ ./config.sh --url https://github.com/aanwer759/data-pipeline-simulator --token A4U7BI2KIBZS32UABCZLJB3I6TZUI# Last step, run it!
$ ./run.sh
